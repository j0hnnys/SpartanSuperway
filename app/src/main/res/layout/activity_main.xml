<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:id="@+id/etaTime"
        android:background="@drawable/circle_shape"
        android:text="@string/eta_button_text"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/separator"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_below="@id/etaTime"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/purchaseTicketButton"
            android:background="@drawable/circle_shopping_cart"
            android:layout_width="88dp"
            android:layout_height="80dp"
            style="@style/MainScreenBottomOptions"/>

        <Button
            android:id="@+id/viewTicketsButton"
            android:background="@drawable/circle_tags"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="88dp"
            android:layout_height="80dp"
            style="@style/MainScreenBottomOptions"/>

        <Button
            android:id="@+id/thirdOptionButton"
            android:background="@drawable/circle_map"
            android:layout_width="88dp"
            android:layout_height="80dp"
            style="@style/MainScreenBottomOptions"/>

    </LinearLayout>

</RelativeLayout>